[module/uparch]
type = custom/script
exec = ~/.local/bin/uparch.sh
interval = 600
format-prefix = " ÔÅî "
format-prefix-foreground = ${colors.foreground}
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 2
click-left = $TERMFLOAT -e bash pacui &
click-right = xdo close &

################################################################################


[module/sep]
; alternative separator
type = custom/text
content = " "
content-foreground = ${colors.foreground}
content-background =  ${colors.background}

################################################################################


[module/ctemp]
type = custom/script
exec = sensors | awk  '/^Tdie:/ {print $2}'
interval = 2
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}
;format-underline = #C1B93E
format-prefix-foreground = #c3cdc8
label =  Ôãã %output%

[module/battery]
type = custom/script
exec = acpi -b | awk '{print $3 $4}'
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}
label = %output%




################################################################################

[module/uptime]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#uptime
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
interval = 100
label = Uptime : %output%

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "ÔÑà "
format-prefix-foreground = #C15D3E
#format-underline = #C15D3E
format-padding = 2

################################################################################



