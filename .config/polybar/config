label-warn = %temperature-c%
label-warn-foreground = #fd0073
;label-warn-background = ${colors.background}


ramp-0 = Ôãã
ramp-1 = Ôãã
ramp-2 = Ôãã
ramp-foreground = ${colors.foreground}
